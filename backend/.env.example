# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/capx
# For MongoDB Atlas, use:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/capx?retryWrites=true&w=majority

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# Server Configuration
HOST=0.0.0.0
PORT=5000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_ECR_REGISTRY=123456789.dkr.ecr.us-east-1.amazonaws.com
AWS_S3_BUCKET=capx-terraform-state

# Kubernetes Configuration
KUBERNETES_NAMESPACE=capx-platform
KUBECONFIG_PATH=/path/to/kubeconfig
# For in-cluster config, leave empty or set to 'in-cluster'

# GitHub Configuration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_ORG=your-github-org

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# Grafana Configuration
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=your-grafana-api-key

# ELK Stack Configuration
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Auto-Healing Configuration
AUTO_HEALING_ENABLED=True
HEALTH_CHECK_INTERVAL_SECONDS=60
INCIDENT_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/capx.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_AI_INSIGHTS=True
ENABLE_TERRAFORM=True
ENABLE_AUTO_HEALING=True
